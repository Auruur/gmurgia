---
import GitHub from "@/icons/GitHub.astro"
import Section from "../Section.astro"

import { projects } from "@cv"
---

<Section title="Projects">
  <ul>
    {
      projects.map(
        ({ url, description, highlights, name, isActive, }) => {
          return (
            <li>
              <article>
                <header>
                  <h3>
                    <a href={url} target="_blank" title={`Ver el proyecto ${name}`}>
                      {name}
                    </a>
                    {isActive && <span>â€¢</span>}
                  </h3>
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>
                  })}
                </footer>
              </article>
            </li>
          )
        }
      )
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-inline: -16px;
  }

  article {
    border-radius: 8px;
    border: 1px solid var(--border-color, #ddd);
    background: var(--article-bg, #f9f9f9);
    color: var(--text);
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
    transition: background 0.2s ease, color 0.2s ease;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: var(--text);
  }

  article a:hover {
    text-decoration: underline;
  }

  article p {
    font-size: 0.75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
    color: var(--subtle-text);
  }

  article h3 span {
    color: var(--accent-green);
    animation: flicker 3s ease-in infinite;
  }

  footer {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    font-size: 0.6rem;
  }

  footer span {
    border-radius: 6px;
    background: var(--highlight-bg);
    color: var(--highlight-text);
    font-size: 0.6rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
  }

  @keyframes flicker {
    0% { opacity: 1; }
    50% { opacity: 0.25; }
    100% { opacity: 1; }
  }

  @media (width <= 700px) {
    ul {
      margin-inline: 0;
    }

    article {
      border: none;
      box-shadow: 0 1px 1px rgba(0, 0, 0, 0.05);
      padding: 0 0 16px;
    }
  }

  @media print {
    article h3 span {
      animation-name: none;
    }
  }
</style>

