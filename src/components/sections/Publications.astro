---
import Section from "../Section.astro"
import { publications } from "@cv"
---

<Section title="Publications">
  <ul>
    {
      publications.map(({ name, publisher, releaseDate, summary, url, authors }) => {
        const year = new Date(releaseDate).getFullYear()

        return (
          <li>
            <article>
              <header>
                <div style="display: flex; align-items: center; justify-content: space-between;">
                  <h3>
                    <a href={url} target="_blank" rel="noopener noreferrer">{name}</a>
                  </h3>
                  <time>{year}</time>
                </div>
                {authors && <p class="authors">{authors}</p>}
              </header>
              <p><strong>{publisher}</strong> â€” {summary}</p>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  article h3 {
    font-weight: 500;
    margin: 0;
    color: var(--text);
  }

  a {
    color: var(--text);
  }

  a:hover {
    text-decoration: underline;
  }

  time {
    font-size: 0.85rem;
    color: var(--subtle-text);
    min-width: 60px;
    text-align: right;
  }

  .authors {
    font-size: 0.8rem;
    color: var(--subtle-text);
    margin-top: 2px;
    margin-bottom: 6px;
  }

  p {
    font-size: 0.85rem;
    line-height: 1.4rem;
    color: var(--subtle-text);
    margin: 0;
  }

  header {
    margin-bottom: 4px;
  }
</style>
